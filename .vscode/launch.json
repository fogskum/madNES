    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug madNES with nestest.nes",
            "cargo": {
                "args": [
                    "build",
                    "--bin=madnes",
                    "--package=madnes"
                ],
                "filter": {
                    "name": "madnes",
                    "kind": "bin"
                }
            },
            "args": ["--debug"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug madNES with custom ROM",
            "cargo": {
                "args": [
                    "build",
                    "--bin=madnes",
                    "--package=madnes"
                ],
                "filter": {
                    "name": "madnes",
                    "kind": "bin"
                }
            },
            "args": ["--rom-path", "test_log.nes"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in madNES",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=madnes",
                    "--package=madnes"
                ],
                "filter": {
                    "name": "madnes",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}